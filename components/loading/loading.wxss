/* 加载模块 */
.loading_compo{
  height:60rpx;
  width:100%;

}
.loading_compo .loading_inner{
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  align-content: center;
}
.loading_compo .loading_inner>image{
  width:36rpx;
  height:36rpx;
  margin-right:10rpx;
}
.loading_compo .loading_inner text{
  height:60rpx;
  line-height: 60rpx;
  font-size:24rpx;
  color: #b2b2b2;
}