.search_compo{
  height:76rpx;
  background: #03A863;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.search_compo .search_inner{
  width:100%;
  height:100%;
  margin:0 0 0 30rpx;
  flex: 4;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  border-bottom:1px solid #fff;
}
.search_compo .search_inner.noBorder{
  border:none;
}

.pr{
  padding-right:30rpx;
}
.scan_item{
  width:100rpx;
  height: 80rpx;
  padding:20rpx 30rpx;
}
.scan_item>image{
  width:40rpx;
  height: 40rpx;
}
.fc-fe{
  color:#fefefe;
}
.search_input{
  flex: 3;
  margin-left:20rpx;
}
.search_inner .search_btn{
  width:80rpx;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search_inner .search_btn>image{
  width: 40rpx;
  height: 40rpx;
}
.fc-fff{
  color:#fff;
}
.fs-32{
  font-size:32rpx;
}
.fs-28{
  font-size:28rpx;
}