.f_btn{
  width:100%;
  height:88rpx;
  background: #03A863;
  color:#fff;
  font-size:32rpx;
  border-radius: 44rpx;
  border:none;
  outline: none;
}
button::after{
  border: none;
}



.one_line{
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.two_line{
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.s_row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: space-between;
}
.ss_row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}

.c_col{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  align-content: center;
}

.body_flex{
  padding:0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: stretch;
  align-items: stretch;
}
.icon_go{
  width:16rpx;
  height:30rpx;
}
.icon_down{
  width:26rpx;
  height:14rpx;
}
.style_img{
  width:120rpx;
  height:120rpx;
  border-radius: 8rpx;
}


.normal_btn{
  width:auto;
  padding:0 20rpx;
  border-radius: 30rpx;
  height:60rpx;
  font-size:28rpx;
  line-height: 60rpx;
  min-width:140rpx;
  margin:0;
  display: inline-block;
}
.color_sec_head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.full{
  width: 100%;
  height:100%;
}

.footer_full_btn{
  height:88rpx;
  width:100%;
  background: #03A863;
  text-align: center;
  font-size:28rpx;
  color:#fff;
  line-height: 88rpx;
}
/* 顶部阴影 */
.bst{
  box-shadow: 1rpx 0 2rpx 0 #e2e2e2;
    z-index: 999;
}
