/**app.wxss**/
page{
  background: #f4f4f4;
  width:100%;
  height:100%;
  overflow:hidden;
}
.body{
  position: relative;
  height:100%;
  width:100%;           
  overflow-y:auto;
  overflow-x:hidden;
}

view,text,form,scroll-view{
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.item{
  margin:20rpx 20rpx 0;
  padding:0 20rpx;
  border-radius: 8rpx;
  background: #fff;
}
.cell{
  height: 88rpx;
  border-bottom:1rpx solid #e2e2e2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: space-between;
}
.cell:last-child{
  border:none;
}
.tac{
  text-align: center;
}
.tal{
  text-align: left;
}
.tar{
  text-align: right;
}
.oh{
  overflow:hidden;
}
.fc-main{
    color:#03A863;
}
.fc-33{
  color: #333333;
}
.fc-b2{
  color: #b2b2b2;
}
.fc-fff{
  color:#fff;
}
.fc-70{
  color:#707070 !important;
}
.fc-red{
  color:red;
}
.bra{
  -webkit-border-radius: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.bb{
  border-bottom:1rpx solid #e2e2e2;
}
.bt{
  border-top:1rpx solid #e2e2e2;
}
.br{
  border-right:1rpx solid #e2e2e2;
}
.bg-main{
  background-color:#03A863;
}
.bg-f4{
  background-color:#f4f4f4; 
}
.bg-white{
    background-color:#fff; 
}

.fs-22{
