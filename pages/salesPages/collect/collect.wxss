
.goods_list_box{
  height:100%;
  flex: 3;
  overflow: hidden;
  width:100%;
}
.goods_list{
  width:100%;
  white-space: nowrap;
}

.input_number{
  width:400rpx;
}
.icon_scan{
  width:40rpx;
  height:40rpx;
}
.del_item{
  height:100%;
  padding-left:30rpx;
  line-height: 88rpx;
}


/* 收银模块 */
.input_cell{
  padding:0 20rpx;
  z-index: 10000;
}
.input_sec{
  width:80%;
  flex: 3;
  height:86rpx;
}
.input_label{
  width: 170rpx;
}
.scan_cell{
  width:100%;
  flex: 3;
}
.disco{
  flex:1;
}

.scan_btn{
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items:center;
}
.scan_btn>text{
  height: 100%;
  line-height: 88rpx;
  margin-left:20rpx;

}
.add_item{
  width:88rpx;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left:1px solid #e2e2e2;
}
.icon_add{
  width:40rpx;
  height:40rpx;
}
.pay_cell{
  height: 100%;
  padding-right:20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay_icon{
  width:88rpx;
  height:88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay_icon>image{
  width:34rpx;
  height: 34rpx;
}
.priceCell{
  text-align: center;
}
.cell_right{
  flex-direction: row-reverse;
}

/* 搜索商品模块
 */
.pop_mask{
  position: fixed;
  z-index: 20000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.pop_content{
  width: 100%;
  position: fixed;
  height: auto;
  bottom:0;
  z-index: 30000;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items:stretch;
  align-content: stretch
}
.pop_head{
  height:100rpx;
  position:relative;

}
.pop_title{
  height: 100%;
  line-height: 100rpx;
}
.pop_head .close_btn{
  height:100rpx;
  width: 100rpx;
  position: absolute;
  top:0;
  right:0;
  padding:30rpx;
}
.close_btn image{
  width:40rpx;
  height:40rpx;
}

.pop_search{
  padding: 0 30rpx 0 50rpx;
  height: 100rpx;
  overflow:hidden;
}
.searchInput{
  height: 100%;
  width:480rpx;
}
.pop_search .search_btn{
  text-align: center;
  border:1rpx solid #03a863;
  width:auto;
  padding:0 20rpx;
  border-radius:30rpx;
  height:58rpx;
  font-size:28rpx;
  line-height:60rpx;
  min-width:140rpx;
  z-index: auto;
}

.list_item{
  width:100%;
  height:700rpx;
  white-space: nowrap;
}

.list_head{
  padding:20rpx;
}
.list_info{
  height: 120rpx;
  width:100%;
  flex: 3;
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  align-content: stretch;
}
.list_img{
  width:120rpx;
  height:120rpx;
}
.w_full{
  width:100%;
}
.list_footer{
  padding-left:20rpx;
  height:100rpx;
}
.addBtn_item{
  height:100%;
  padding:0 20rpx;
  line-height: 100rpx;
}


.footer_full_btn{
  border-radius: 0;
}