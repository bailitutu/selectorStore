.goods_info{
  height:160rpx;
  padding:20rpx;
}
.goods_img{
  width:120rpx;
  height: 120rpx;
}
.goods_inner{
  width: 100%;
  flex: 3;
  height:120rpx;
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  align-content: stretch;
}
.goods_num{
  width:100%;
}

.refundPicker{
  width: 100%;
  flex: 3;
  height: 100%;
  line-height: 88rpx;
  padding-left:100rpx;
}
.reason_item{
  height:auto;
  overflow:hidden;
}
.reason_label{
  margin-top:15rpx;
  min-width:150rpx;
  align-self: flex-start;
}
.refundReason{
  height:100rpx;
  line-height: 20rpx;
  padding: 20rpx 0;
  flex: 3;
}
.picker_label{
  min-width:200rpx;
}
.mt-30{
  margin-top:30rpx;
}