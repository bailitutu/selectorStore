@import '/components/Dialog/dialog';

.go_item{
  width:100%;
  background: #fff;
  height:90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:0 40rpx;
}
.go_title{
  font-size:28rpx;
  color:#707070;
}

.sale_info{
  margin:20rpx 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.sale_cell{
  width:49%;
  height:130rpx;
  background: #fff;
  padding:20rpx;
  
}

.collect_btn{
  width:216rpx;
  height: 216rpx;
  box-shadow: 0 0 8rpx #03B463 ;
  border-radius: 50%;
  margin:50rpx auto 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items:center;
}
.collect_icon{
  width:104rpx;
  height:86rpx;
}

/* 待支付弹窗 */
.wx-dialog-footer .wx-dialog-btn:nth-of-type(1) {
  color:#03a863;
}
.wx-dialog-content{
  padding:70rpx 15px 60rpx;
}