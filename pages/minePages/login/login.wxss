.logo_item{
  margin-top:112rpx;
  text-align: center;
}
.logo_item>image{
  width: 220rpx;
  height:221rpx;
}
.form_item{
  width: 100%;
  margin-top:100rpx;
}
.form_item .form_section{
  padding:24rpx 80rpx 0 20rpx;
  border-bottom:1px solid #e2e2e2;
  height:100rpx;
  position: relative;
}
.form_item .form_section input{
  height:100%;
  width:100%;
  line-height:88rpx;
}
.forget_item{
  height:88rpx;
  padding: 0;
  text-align: center;
  font-size:0;
}
.forget_btn{
  height:100%;
  line-height: 88rpx;
  padding:0 20rpx; 
  vertical-align: middle; 
  display: inline-block
}
.pass_icon{
  position: absolute;
  right:0;
  bottom:0;
  height:88rpx;
  width:60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pass_icon>image{
  width:44rpx;
  height:32rpx;
}
.pass_icon>image.pass_show{
  width:44rpx;
  height:28rpx;
}