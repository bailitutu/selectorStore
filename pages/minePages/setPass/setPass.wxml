<view class='body plr-20'>
    <view class='form_item'>
      <form>
        <view class="form_section">
          <input type='password' class='fs-28' confirm-type='next' maxlength='20' minlength='6' placeholder="请输入6-20位字母，数字组合密码" bindinput='inputPassOne' value='{{passOne}}'  auto-focus/>
        </view>
        <view class="form_section">
          <input type='password' class='fs-28' value='{{passTwo}}' confirm-type='done' placeholder="请确认密码"  maxlength='20' minlength='6' bindinput='inputPassTwo' />
        </view>
          <button type='button' class='f_btn mt-100' form-type='submit' catchtap='submitFn' >确认</button>
      </form>
  </view>
</view>
