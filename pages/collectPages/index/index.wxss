@import '../../salesPages/sales/sales';

toptal_item{
  height: 76rpx;
  width:100%;
  
}
.toptal_cell{
  flex: 1;
  text-align: center;
  height: 76rpx;
  line-height: 76rpx;
}
.toptal_cell:first-child{
  border-right:1px solid #f4f4f4;
}

/* 顶部统计 */
.topTab{
  margin-top:10rpx;
}

/* 现金结算的统计 */
.total_sec{
  height:156rpx;
  width:100%;
  align-content:stretch;
  padding:20rpx 0;
}
.total_sec .total_cell{
  padding-top:10rpx;
  height:100%;
  flex: 1;
  text-align: center;
  border-right:1px solid #e2e2e2;
}
.total_sec .total_cell:last-child{
  border:none;
}



/* 列表 */
.list_item{
  height:100%;
  width: 100%;
  flex: 2;
  display: flex;
}
.list_item .list_scroll{
  width:100%;
  white-space: nowrap;
}

/* 支付 */
.pay_item{
  height:90rpx;
  padding:0 30rpx;
}
